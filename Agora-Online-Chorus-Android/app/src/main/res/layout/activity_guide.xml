<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GuideActivity">

    <EditText
        android:id="@+id/et_channel_name"
        android:layout_marginTop="48dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:hint="please input channel name!!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="48dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:text="Click button to choose a role!!!" />

    <ImageView
        android:onClick="onBroadcasterClicked"
        android:background="@drawable/btn_songs"
        android:layout_marginTop="128dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="254dp"
        android:layout_height="32dp" />

    <ImageView
        android:onClick="onListenerClicked"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_singers"
        android:layout_marginTop="24dp"
        android:layout_width="254dp"
        android:layout_height="32dp" />

</LinearLayout>